{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./constants/models/MiTable/index.ts",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@mi/models/*": ["./constants/models/*"]
    }
  },
  "include": ["rollup.config.js", "src"],
  "files": ["src/index.ts"]
}
